{
  "name": "second-brain-foundation",
  "version": "0.1.0",
  "private": true,
  "description": "Open-source framework for AI-augmented personal knowledge management",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:cli": "cd packages/cli && npm run dev",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{js,json,md,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yaml}\""
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "prettier": "^3.5.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
