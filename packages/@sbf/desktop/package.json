{
  "name": "@sbf/desktop",
  "version": "0.1.0",
  "description": "Second Brain Foundation Desktop Application",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "dev": "npm run build:main && concurrently \"vite\" \"electron .\"",
    "start": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "@ant-design/charts": "^1.4.2",
    "@ant-design/icons": "^5.3.0",
    "@sbf/aei": "workspace:*",
    "@sbf/budgeting": "workspace:*",
    "@sbf/core": "workspace:*",
    "@sbf/core-entity-manager": "workspace:*",
    "@sbf/core-knowledge-graph": "workspace:*",
    "@sbf/core-lifecycle-engine": "workspace:*",
    "@sbf/core-privacy": "workspace:*",
    "@sbf/fitness-tracking": "workspace:*",
    "@sbf/jobs": "workspace:*",
    "@sbf/learning-tracker": "workspace:*",
    "@sbf/legal-ops": "workspace:*",
    "@sbf/medication-tracking": "workspace:*",
    "@sbf/memory-engine": "workspace:*",
    "@sbf/nutrition-tracking": "workspace:*",
    "@sbf/personal-tasks": "workspace:*",
    "@sbf/portfolio-tracking": "workspace:*",
    "@sbf/property-mgmt": "workspace:*",
    "@sbf/relationship-crm": "workspace:*",
    "@sbf/restaurant-haccp": "workspace:*",
    "@sbf/shared": "workspace:*",
    "@sbf/va-dashboard": "workspace:*",
    "@types/d3": "^7.4.3",
    "@tiptap/react": "^2.2.4",
    "@tiptap/starter-kit": "^2.2.4",
    "@tiptap/extension-placeholder": "^2.2.4",
    "antd": "^5.14.0",
    "axios": "^1.6.0",
    "chart.js": "^4.5.1",
    "d3": "^7.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  },
  "build": {
    "appId": "org.secondbrainfoundation.app",
    "productName": "Second Brain",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}
